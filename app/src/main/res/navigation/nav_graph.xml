<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sibi.helpi.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_login_fragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_login_fragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sibi.helpi.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_adminDashBoardFragment"
            app:destination="@id/adminDashBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sibi.helpi.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchProductFragment"
        android:name="com.sibi.helpi.fragments.SearchProductFragment"
        android:label="fragment_search_product"
        tools:layout="@layout/fragment_search_product" >
        <action
            android:id="@+id/action_searchProductFragment_to_searchProductResultFragment"
            app:destination="@id/searchProductResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/offerProductFragment"
        android:name="com.sibi.helpi.fragments.OfferPostFragment"
        android:label="fragment_offer_product"
        tools:layout="@layout/fragment_offer_post" />

    <fragment
        android:id="@+id/offerServiceFragment"
        android:name="com.sibi.helpi.fragments.OfferServiceFragment"
        android:label="fragment_offer_service"
        tools:layout="@layout/fragment_offer_service" />
    <fragment
        android:id="@+id/searchServiceFragment"
        android:name="com.sibi.helpi.fragments.SearchServiceFragment"
        android:label="fragment_search_service"
        tools:layout="@layout/fragment_search_service" >
        <action
            android:id="@+id/action_searchServiceFragment_to_searchServiceResultFragment"
            app:destination="@id/searchServiceResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="com.sibi.helpi.fragments.ProductPageFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product_page" />
    <fragment
        android:id="@+id/searchProductResultFragment"
        android:name="com.sibi.helpi.fragments.SearchProductResultFragment"
        android:label="fragment_search_product_result"
        tools:layout="@layout/fragment_search_product_result" >
        <action
            android:id="@+id/action_searchProductResultFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sibi.helpi.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchServiceResultFragment"
        android:name="com.sibi.helpi.fragments.SearchServiceResultFragment"
        android:label="fragment_search_service_result"
        tools:layout="@layout/fragment_search_service_result" >
        <action
            android:id="@+id/action_searchServiceResultFragment_to_servicePageFragment"
            app:destination="@id/servicePageFragment" />
    </fragment>
    <fragment
        android:id="@+id/servicePageFragment"
        android:name="com.sibi.helpi.fragments.ServicePageFragment"
        android:label="fragment_service_page"
        tools:layout="@layout/fragment_service_page" />
    <fragment
        android:id="@+id/adminDashBoardFragment"
        android:name="com.sibi.helpi.fragments.AdminDashBoardFragment"
        android:label="fragment_admin_dash_board"
        tools:layout="@layout/fragment_admin_dash_board" />

</navigation>