<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sibi.helpi.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_login_fragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_login_fragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sibi.helpi.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_login_fragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sibi.helpi.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/advancedSearchFragment"
        android:name="com.sibi.helpi.AdvancedSearchFragment"
        android:label="fragment_advanced_search"
        tools:layout="@layout/fragment_advanced_search" />
    <fragment
        android:id="@+id/searchProductFragment"
        android:name="com.sibi.helpi.SearchProductFragment"
        android:label="fragment_search_product"
        tools:layout="@layout/fragment_search_product" />
    <fragment
        android:id="@+id/offerProductFragment"
        android:name="com.sibi.helpi.OfferProductFragment"
        android:label="fragment_offer_product"
        tools:layout="@layout/fragment_offer_product" />
    <fragment
        android:id="@+id/offerServiceFragment"
        android:name="com.sibi.helpi.OfferServiceFragment"
        android:label="fragment_offer_service"
        tools:layout="@layout/fragment_offer_service" />
    <fragment
        android:id="@+id/searchServiceFragment"
        android:name="com.sibi.helpi.SearchServiceFragment"
        android:label="fragment_search_service"
        tools:layout="@layout/fragment_search_service" />

</navigation>