<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding = "16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="הרשמה"
            android:textColor="#A6A6A6"
            android:textSize="60sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/icon_account_circle_white" />

        <Button
            android:id="@+id/choose_picture_button"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#A6A6A6"
            android:padding="20sp"
            android:text="בחר תמונת פרופיל"
            android:textColor="#FFFFFF"
            android:textColorLink="#A6A6A6"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounder_corner"
            android:hint="שם פרטי"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textColor="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounder_corner"
            android:hint="שם משפחה"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textColor="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounder_corner"
            android:hint="דואר אלקטרוני"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textColor="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textSize="20sp" />


        <EditText
        android:id="@+id/password_input"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounder_corner"
        android:hint="סיסמה"
        android:gravity="end"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="#A6A6A6"
        android:textColorHint="#A6A6A6"
        android:textSize="20sp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#63B8E4"
            android:padding="18dp"
            android:text="התחבר"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="-----------------------Social Login-----------------------"
            android:textColor="#A6A6A6"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/x_button"
                android:layout_width="64dp"
                android:layout_height="120dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_x" />

            <ImageView
                android:id="@+id/google_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_google" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>










